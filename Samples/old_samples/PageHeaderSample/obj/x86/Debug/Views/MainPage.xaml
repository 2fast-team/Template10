<Page x:ConnectionId='1' x:Class="Template10.Samples.PageHeaderSample.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Template10.Samples.PageHeaderSample.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Template10.Samples.PageHeaderSample.ViewModels" 
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:MainPageViewModel, IsDesignTimeCreatable=True}">

    <Page.DataContext>
        <vm:MainPageViewModel />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='3' x:Name="NormalState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="500" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TextBlockSelectionInfo.(UIElement.Visibility)"
                                Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  page header  -->

        <controls:PageHeader x:ConnectionId='5' BackButtonVisibility="Collapsed" Content="Main Page"                       
                                                                                              >
            <Interactivity:Interaction.Behaviors>
                <Behaviors:EllipsisBehavior Visibility="Auto" />
            </Interactivity:Interaction.Behaviors>
            <controls:PageHeader.PrimaryCommands>
                <AppBarButton x:ConnectionId='11' Label="Select"
                                                                           
                              Icon="Bullets" />
                <AppBarButton x:ConnectionId='12' Label="Reset"
                                                                   
                              Icon="Refresh" />
            </controls:PageHeader.PrimaryCommands>
        </controls:PageHeader>

        <controls:PageHeader x:ConnectionId='6' BackButtonVisibility="Collapsed"
                                                   
                             HorizontalContentAlignment="Stretch"
                                                                                                       >
            <Interactivity:Interaction.Behaviors>
                <Behaviors:EllipsisBehavior Visibility="Auto" />
            </Interactivity:Interaction.Behaviors>

            <controls:PageHeader.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:ConnectionId='8' x:Name="TextBlockSelectionInfo"
                               TextWrapping="NoWrap"
                               VerticalAlignment="Center"
                               Opacity="0.7"
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextTrimming="CharacterEllipsis"
                                                                                    />

                    <AppBarButton x:ConnectionId='9'                                             
                                  Grid.Column="1">
                        <TextBlock Text="Cancel"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   HorizontalAlignment="Center" />
                    </AppBarButton>
                </Grid>
            </controls:PageHeader.Content>

            <controls:PageHeader.PrimaryCommands>
                <AppBarSeparator />

                <AppBarButton x:ConnectionId='10' x:Name="DeleteButton"
                                                                                         
                                                        
                              Label="Delete"
                              Icon="Delete" />
            </controls:PageHeader.PrimaryCommands>
        </controls:PageHeader>


        <!--  page content  -->

        <ListView x:ConnectionId='7' x:Name="ListView"
                                                                     
                  Grid.Row="1"
                  VerticalAlignment="Stretch"
                                                                               
                                                               />
    </Grid>
</Page>


