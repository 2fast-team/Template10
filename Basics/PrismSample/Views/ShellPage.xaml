<Page
    x:Class="PrismSample.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Template10.Controls"
    mc:Ignorable="d">

    <controls:NavViewEx x:Name="ShellView" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Add" Content="Items" controls:NavViewProps.NavigationUri="/MainPage" />
            <NavigationViewItem Icon="Add" Content="Two" />
            <NavigationViewItemSeparator />
            <NavigationViewItem Icon="Add" Content="Calendar" />
            <NavigationViewItem Icon="Add" Content="Forum" />
        </NavigationView.MenuItems>
        <NavigationView.PaneFooter>
            <StackPanel>
                <NavigationViewItem Icon="Contact" Content="Profile" />
                <NavigationViewItem Icon="Flag" Content="Feedback" />
            </StackPanel>
        </NavigationView.PaneFooter>
    </controls:NavViewEx>

</Page>
