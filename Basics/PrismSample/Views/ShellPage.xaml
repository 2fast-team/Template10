<Page
    x:Class="PrismSample.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Add" Content="One" />
            <NavigationViewItem Icon="Add" Content="Two" />
            <NavigationViewItemSeparator />
            <NavigationViewItem Icon="Add" Content="Three" />
            <NavigationViewItem Icon="Add" Content="Four" />
        </NavigationView.MenuItems>
        <NavigationView.PaneFooter>
            <StackPanel>
                <NavigationViewItem Icon="Contact" Content="Profile" />
                <NavigationViewItem Icon="Flag" Content="Feedback" />
            </StackPanel>
        </NavigationView.PaneFooter>
        <NavigationView.Content>
            <Frame x:Name="ContentFrame" />
        </NavigationView.Content>
    </NavigationView>

</Page>
