    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:PrismSample.ViewModels"
    xmlns:T10="using:Prism.Windows.Controls"
    T10:NavViewProps.HeaderText="Main Page"
    mc:Ignorable="d">

    <Page.Resources>
        <viewmodels:MainPageViewModel x:Name="ViewModel" />
    </Page.Resources>

    <GridView Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="16,48,16,16" x:Name="MainGridView">

