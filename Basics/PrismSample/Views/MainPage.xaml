<Page
    x:Class="PrismSample.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Prism.Windows.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:PrismSample.ViewModels"
    mc:Ignorable="d">

    <controls:NavViewProps.HeaderText>
        <x:String>Main Page</x:String>
    </controls:NavViewProps.HeaderText>

    <controls:NavViewProps.HeaderCommands>
        <AppBarButton Icon="Accept" Label="One" />
        <AppBarButton Icon="Account" Label="Two" />
        <AppBarButton Icon="Add" Label="Three" />
    </controls:NavViewProps.HeaderCommands>

    <Page.Resources>
        <viewmodels:MainPageViewModel x:Name="ViewModel" />
    </Page.Resources>

    <GridView
        x:Name="MainGridView"
        Padding="16,84,16,16"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <GridView.Header>
            <StackPanel>
                <TextBlock
                    x:Name="HeaderTextBlock"
                    Margin="16,0,0,0"
                    Style="{StaticResource HeaderTextBlockStyle}"
                    Text="Default" />
                <TextBlock
                    x:Name="SubHeaderTextBlock"
                    Margin="16,0,0,8"
                    Style="{StaticResource SubheaderTextBlockStyle}"
                    Text="Default" />
            </StackPanel>
        </GridView.Header>

        <GridView.ItemTemplate>
            <DataTemplate>
                <StackPanel
                    Width="250"
                    Height="150"
                    Margin="4"
                    Padding="16"
                    Background="SteelBlue">
                    <Border BorderBrush="White" BorderThickness="0,0,0,1">
                        <TextBlock
                            Foreground="White"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{Binding}" />
                    </Border>
                    <TextBlock
                        Foreground="White"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        TextWrapping="Wrap">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, eiusmod.
                    </TextBlock>
                </StackPanel>
            </DataTemplate>
        </GridView.ItemTemplate>

