<t10:BootStrapper
    x:Class="Sample.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:t10="using:Template10"
    xmlns:pop="using:Template10.Popups">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Custom.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <pop:BusyPopup x:Key="BusyPopup">
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </pop:BusyPopup>

            <pop:SplashPopup x:Key="SplashPopup" AutoHide="false">
                <pop:SplashPopup.BackgroundBrush>
                    <SolidColorBrush Color="Green" />
                </pop:SplashPopup.BackgroundBrush>
                <DataTemplate>
                    <TextBlock Foreground="White" Text="Splash..." />
                </DataTemplate>
            </pop:SplashPopup>

            <pop:NetworkPopup x:Key="NetworkPopup" Requirement="None">
                <DataTemplate>
                    <TextBlock Text="Network required..." />
                </DataTemplate>
            </pop:NetworkPopup>

        </ResourceDictionary>
    </Application.Resources>

</t10:BootStrapper>