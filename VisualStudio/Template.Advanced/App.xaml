<t10:BootStrapper
    x:Class="Sample.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:t10="using:Template10"
    xmlns:pop="using:Template10.Popup"
    xmlns:views="using:Sample.Views">

    <!--<t10:BootStrapper.Popups>
        <t10:BusyPopup />
        --><!--<t10:BusyPopup />-->
        <!--<t10:SplashPopup/>
        <t10:NetworkPopup/>--><!--
    </t10:BootStrapper.Popups>-->

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Custom.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <pop:BusyPopup x:Key="BusyPopup">
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </pop:BusyPopup>

            <pop:SplashPopup x:Key="SplashPopup">
                <DataTemplate>
                    <TextBlock Text="Splash..." />
                </DataTemplate>
            </pop:SplashPopup>

        </ResourceDictionary>
    </Application.Resources>

</t10:BootStrapper>